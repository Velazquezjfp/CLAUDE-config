#!/bin/bash

# CFF Personnel Planning MCP - Google Cloud Run Deployment Script
# This script builds and deploys the MCP server to Google Cloud Run

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Default values
REGION="us-central1"
ALLOW_UNAUTHENTICATED="false"

# Function to print colored messages
print_info() {
    echo -e "${GREEN}[INFO]${NC} $1"
}

print_warn() {
    echo -e "${YELLOW}[WARN]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Check if gcloud is installed
if ! command -v gcloud &> /dev/null; then
    print_error "gcloud CLI not found. Please install Google Cloud SDK first."
    exit 1
fi

# Get project ID
PROJECT_ID=$(gcloud config get-value project 2>/dev/null)
if [ -z "$PROJECT_ID" ]; then
    print_error "No Google Cloud project configured. Run: gcloud config set project YOUR_PROJECT_ID"
    exit 1
fi

print_info "Using Google Cloud Project: $PROJECT_ID"

# Parse command line arguments
while getopts "r:u" opt; do
    case $opt in
        r) REGION="$OPTARG" ;;
        u) ALLOW_UNAUTHENTICATED="true" ;;
        \?) echo "Invalid option -$OPTARG" >&2; exit 1 ;;
    esac
done

# Service name
SERVICE_NAME="cff-personnel-mcp"
IMAGE_NAME="gcr.io/$PROJECT_ID/$SERVICE_NAME"

print_info "Building container image..."
gcloud builds submit --tag "$IMAGE_NAME"

if [ $? -ne 0 ]; then
    print_error "Container build failed"
    exit 1
fi

print_info "Deploying to Cloud Run..."

# Build deployment command
DEPLOY_CMD="gcloud run deploy $SERVICE_NAME \
  --image $IMAGE_NAME \
  --platform managed \
  --region $REGION \
  --set-env-vars CFF_API_BASE_URL=http://150.241.245.65:8002"

if [ "$ALLOW_UNAUTHENTICATED" = "true" ]; then
    print_warn "Deploying with --allow-unauthenticated (not recommended for production)"
    DEPLOY_CMD="$DEPLOY_CMD --allow-unauthenticated"
else
    print_info "Deploying with authentication required (recommended)"
    DEPLOY_CMD="$DEPLOY_CMD --no-allow-unauthenticated"
fi

eval $DEPLOY_CMD

if [ $? -eq 0 ]; then
    print_info "Deployment successful!"

    # Get service URL
    SERVICE_URL=$(gcloud run services describe $SERVICE_NAME --platform managed --region $REGION --format 'value(status.url)')

    print_info "Service URL: $SERVICE_URL"

    if [ "$ALLOW_UNAUTHENTICATED" = "false" ]; then
        print_info ""
        print_info "To use this MCP server, configure your client with:"
        print_info "URL: $SERVICE_URL"
        print_info "Authentication: Bearer token required"
        print_info ""
        print_info "Generate an identity token with:"
        print_info "gcloud auth print-identity-token"
    fi
else
    print_error "Deployment failed"
    exit 1
fi

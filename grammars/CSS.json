{
  "language": "css",
  "version": "2.0",
  "last_updated": "2025-12-16",
  "description": "CSS grammar patterns including Tailwind CSS support",
  "patterns": {
    "classes": [
      "\\.(\\w+(?:-\\w+)*)\\s*\\{"
    ],
    "ids": [
      "#(\\w+(?:-\\w+)*)\\s*\\{"
    ],
    "elements": [
      "^\\s*(\\w+)\\s*\\{",
      "^\\s*(\\w+)\\s*,"
    ],
    "imports": [
      "@import\\s+['\"]([^'\"]+)['\"]",
      "@import\\s+url\\(['\"]?([^'\"\\)]+)['\"]?\\)"
    ],
    "variables": [
      "--(\\w+(?:-\\w+)*)\\s*:"
    ],
    "media_queries": [
      "@media\\s+([^{]+)\\s*\\{"
    ],
    "tailwind_directives": [
      "@tailwind\\s+(base|components|utilities)",
      "@layer\\s+(base|components|utilities)\\s*\\{",
      "@apply\\s+([^;]+);"
    ],
    "tailwind_theme": [
      "--([a-zA-Z-]+):\\s*([^;]+);",
      "hsl\\(var\\(--([^)]+)\\)\\)"
    ],
    "custom_components": [
      "\\.(pane|tree-item|chat-bubble|slash-command|command-button|tab-button|metadata-row)(?:[^{]*)?\\s*\\{"
    ],
    "pseudo_classes": [
      ":root\\s*\\{",
      "\\.dark\\s*\\{",
      "(hover|focus|active|disabled)\\s*\\{",
      ":(hover|focus|active|disabled|first-child|last-child)\\s*\\{"
    ],
    "keyframes": [
      "@keyframes\\s+(\\w+)\\s*\\{"
    ]
  }
}
